                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.azstack.RegistrationIntentService"
            android:exported="false" />
        <!-- [END gcm_service] -->
    </application>

</manifest>
